<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1pt</item>
        <item name="android:layout_marginLeft">15pt</item>
        <item name="android:layout_marginRight">15pt</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">30pt</item>
        <item name="android:paddingRight">30pt</item>
        <item name="android:paddingTop">15pt</item>
        <item name="android:paddingBottom">15pt</item>
    </style>

    <style name="BottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48pt</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/bg_common_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14pt</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30pt</item>
        <item name="android:paddingTop">10pt</item>
        <item name="android:paddingBottom">10pt</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textFieldLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:paddingLeft">25pt</item>
        <item name="android:paddingRight">25pt</item>
        <item name="android:paddingBottom">5pt</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="textFieldEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">25pt</item>
        <item name="android:ems">10</item>
        <item name="android:lines">1</item>
    </style>

</resources>